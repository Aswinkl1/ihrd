

    <div class="container-fluid" style="background: #80379A; min-height: 46rem;" >
        <div class="row">
            <div class="col-7">
                
            </div>
            <div class="col ">
                <div class="All-form  mx-auto">

                
               <div class="heading  rounded-2 ">
                 <img src="user-graduate-solid.svg" alt="" class="icon ms-2">

                 <p class="create ">Create new student</p>
               </div>
              {{#if msg}}
                 
              
              <div class="alert alert-warning alert-dismissible fade show " role="alert" >
              <p>{{msg}}</p>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/if}}
               <form action="student-register" method="post">
                <div class="form-group">
                  <label for="exampleInputEmail1" class="labelss">Enter name</label>
                  <input type="text" class="form-control input-form" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter name" name="name">
                  
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1" class="labelss">Collage Id</label>
                  <input type="text" class="form-control input-form" id="exampleInputPasswo" placeholder="CZASUS023"  oninput="this.value = this.value.toUpperCase()" name="collageid">
                </div>
                <div class="mt">
                    <label  class="labelss" >course</label>
                    <select class="form-control input-form" name="course">
                        <option value="">Select </option>
                        <option value="Bsc Computer science">Bsc Computer science</option>
                        <option value="Bsc Electronics">Bsc Electronics</option>
                        <option value="Bcom">Bcom</option>
                      </select>
                </div>
                <div class="mt">
                    <label  class="labelss" >semester</label>
                    <select class="form-control input-form" name="sem" >
                        <option  value="">Select </option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                      </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1" class="labelss">Email Id</label>
                    <input type="email" class="form-control input-form" id="exampleInputPassw" placeholder="minnalnoushu@gmail.com" name="email"> 
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail1" class="labelss">phone</label>
                    <input type="number"min=0 class="form-control input-form" id="exampleInputPass" placeholder="Enter your mobile number" name="studentNumber"> 
                  </div>

                
               <div class="text-center">
               

                <input type="submit" class="btn  w-50 rounded-5 text-light mt-3 h3 btn-create" value="Create Account">
           
               </div>

               </form>
             </div>
            </div>

        </div>
    </div>
    <link rel="stylesheet" href="/stylesheets/login/student.css" type="">

